name: Product Data Quality Audit
description: Analyze product research data quality and provide actionable recommendations
processing_config:
  mode: report
inputs:
  audit_table:
    description: Markdown table of field coverage data
    type: string
  total_records:
    description: Total number of records audited
    type: number
  field_stats:
    description: Summary statistics per field
    type: object
model:
  api: chat
  configuration:
    type: openai_chat
    model_card_id: gpt-4o-mini
  parameters:
    max_tokens: 2000
